{% extends "base.html.twig" %}
{% block body %}
	<article>
		<h2>{{article.title}}</article>
	</h2>
	<div class="metadata">Ecrirt le
		{{ article.createdAt | date('d/n/y')}}
		à
		{{ article.createdAt | date('H:i') }}
		dans la catégorie Politique</div>
	<div class="content">
		<img src="{{article.image}}" alt="">
		{{ article.content | raw }}
	</div>
</article>{% endblock %}
